
<div class="card-offer p-0">

  <% if offer.photo.attached? %>
    <%= cl_image_tag offer.photo.key, crop: :fill, class: "card-offer-img" %>
  <% else %>
    <%= image_tag("https://source.unsplash.com/collection/251966", 
      crop: :fill, class: "card-offer-img") %>
  <% end %>

  <div class="card-offer-body p-4 shadow-lg">
    <h5><%= offer.title %></h5>
    <div class="d-flex justify-content-between">
      <p class="card-offer-tag px-2 py-1 bg-dark text-white rounded"><%= offer.category %></p>
      <span><%= offer.price %> â‚¬</span>
    </div>
    <span><%= offer.date %></span>
  </div>
</div>
