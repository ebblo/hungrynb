<h1>Choisissez une proposition de repas</h1>
<br>

<div class="d-flex justify-content-center mx-5">
  <div class="row">
    <div class="col-6">
      <div class="row justify-content-md-around justify-content-center flex-wrap">
        <% @offers.each do |offer| %>
          <%= link_to offer_path(offer), class: "col-10 col-md-5 col-lg-3 m-2 mx-md-0 " do %>
            <%= render  "shared/card-offer", offer: offer %>
          <% end %>
        <% end %>
      </div>
      <div class="mx-auto my-5 bg w-100">
        <% if user_signed_in? %>
          <%= link_to "Add new offer", new_offer_path, class:"btn btn-secondary btn-lg btn-block" %>
        <% end %> 
      </div>
    </div>
    <div class="col-6 pt-2">
      <div id="map"
        style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
