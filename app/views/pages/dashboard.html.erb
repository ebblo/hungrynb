<h1><%= "Dashboard" %></h1>
<br>

<h2><%= "Bookings" %></h2>

<%# ---------------------TEST TABS SYSTEM------------------------- %>

<div class="container" id="container-dashboard">

  <ul class="nav nav-tabs border-0" id="myTab" role="tablist">
  <li class="nav-item col-4 m-0 p-0" role="presentation">
    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Mes repas</a>
  </li>
  <li class="nav-item col-4 m-0 p-0 border-left" role="presentation">
    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Ma selection de repas</a>
  </li>
  <li class="nav-item col-4 m-0 p-0" role="presentation">
    <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Profil</a>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
      <% @bookings.each do |booking| %>
    <ul>
      <li><%= booking.offer.title %></li>
      <%= link_to "Cancel booking", booking_path(booking), method: :delete, class: "btn btn-danger" %>
    </ul>
  <% end %>
  <br>

  <h2><%= "Offers" %></h2>
  <%= link_to "Add new offer", new_offer_path, class:"btn btn-secondary" %>
  <% @offers.each do |offer| %>

    <ul>
      <li>
        <div class="card-offer p-0">
          <% if offer.photo.attached? %>
            <div style="background: url(<%= url_for(offer.photo) %>);">
              <% if offer.user == current_user && params[:controller] == 'pages' %>
                <%= cl_image_tag 'https://res.cloudinary.com/kyulol/image/upload/v1597931718/delete-cross_vcnchp.svg' %>
              <% end %>
            </div>
          <% else %>
            <%= image_tag("https://images.unsplash.com/photo-1471478108131-9b2335c21611?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80", 
              crop: :fill, class: "card-offer-img") %>
          <% end %>
          <div class="card-offer-body p-4 shadow-lg">
            <h5><%= offer.title %></h5>
            <div class="d-flex justify-content-between">
              <p class="card-offer-tag px-2 py-1 bg-dark text-white rounded"><%= offer.category %></p>
              <span><%= offer.price %> â‚¬</span>
            </div>
            <span><%= offer.date %></span>
          </div>
        </div>
      </li>
      <%= link_to "Show offer", offer_path(offer), class: "btn btn-primary" %>
      <%= link_to "Edit offer", edit_offer_path(offer), class: "btn btn-warning" %>
      <%= link_to "Cancel offer", offer_path(offer), method: :delete, class: "btn btn-danger" %>
    </ul>
  <% end %>
  </div>
  <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">2eme test</div>
  <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">3eme test</div>
</div>

</div>





