<h2>Sign up</h2>
<div class="container d-flex flex-column align-items-center">
  <div class="col-8">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs log-in-form">
        <%= f.input :email, placeholder: "Votre email",
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :first_name, placeholder: "Votre prénom",
                    input_html: { autocomplete: 'address' } %>
        <%= f.input :last_name, placeholder: "Votre nom",
                    input_html: { autocomplete: 'address' } %>
        <%= f.input :address, placeholder: "Votre adresse",
                    input_html: { autocomplete: 'address' } %>
        <%= f.input :password, placeholder: "••••••",
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation, placeholder: "••••••",
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
      </div>
      <div class="d-flex flex-column align-items-center">
        <div class="form-actions btn btn-success rounded-form py-1 d-flex justify-content-center">
          <%= f.button :submit, "Sign up" %>
          <%= image_tag "https://res.cloudinary.com/kyulol/image/upload/v1597854715/back-arrow_elvqss.png", class: "btn-arrow" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center my-3">
    <%= render "devise/shared/links" %>
  </div>
</div>
