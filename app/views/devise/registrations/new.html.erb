<%# -------------------------SIGNUP------------------------- %>
<div class="container d-flex flex-column align-items-center">
  <h2>S'inscrire</h2>
  <div class="col-8">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs log-in-form">
        <%= f.input :email, label: 'Email', placeholder: "caroline.carlier@exemple.com",
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "Votre email" } %>
        <%= f.input :first_name, label: 'Votre prénom', placeholder: "Caroline",
                    input_html: { autocomplete: 'address' } %>
        <%= f.input :last_name, label: 'Votre nom', placeholder: "Carlier",
                    input_html: { autocomplete: 'address' } %>
        <%= f.input :address, label: 'Votre addresse', placeholder: "1 Rue des Trois Frères, 75018 Paris, France",
                    input_html: { autocomplete: 'address' } %>
        <%= f.input :password, label: 'Votre Mot-de-Passe', placeholder: "••••••",
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation, label: 'Confirmer votre mot-de-passe', placeholder: "••••••",
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
      </div>
      <div class="d-flex flex-column align-items-center">
        <div class="form-actions btn btn-success rounded-form py-1 d-flex justify-content-center">
          <%= f.button :submit, "S'inscrire" %>
          <%= image_tag "https://res.cloudinary.com/kyulol/image/upload/v1597854715/back-arrow_elvqss.png", class: "btn-arrow" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center my-3">
    <%= render "devise/shared/links" %>
  </div>
</div>
