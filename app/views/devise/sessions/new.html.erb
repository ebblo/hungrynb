<div class="container d-flex justify-content-center form-login">
  <div class="col-10 col-lg-8 shadow-sm">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs log-in-form">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="d-flex flex-column align-items-center">
        <div class="form-actions btn btn-success rounded-form py-1">
          <%= f.button :submit, "Log in", class:"py-0" %>
          <%= image_tag "https://res.cloudinary.com/kyulol/image/upload/v1597854715/back-arrow_elvqss.png", class: "btn-arrow" %> 
        </div>
      </div>
    <% end %>
    <div class="d-flex justify-content-between">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
